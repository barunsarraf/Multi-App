<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.barun.more.MainActivity"
    android:background="#1e2535">






<LinearLayout
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/relativeLayout">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        app:srcCompat="@drawable/mul3" />




    <EditText
        android:layout_marginTop="20dp"

        android:backgroundTint="#18FFFF"
        android:textColor="#18FFFF"
        android:id="@+id/emailid"
        android:textColorHint="#84FFFF"
        android:hint="Email Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:textColorHint="#84FFFF"
        android:layout_marginTop="10dp"
        android:backgroundTint="#18FFFF"
        android:textColor="#18FFFF"
        android:id="@+id/pwd"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"

        />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/relativeLayou">

        <Button
            android:theme="@style/MyButton"
            android:layout_marginTop="8dp"
            android:textColor="#1e2535"
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"/>

        <Button
            android:theme="@style/MyButton"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/login"
            android:textColor="#1e2535"
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER"/>




        <TextView
            android:textSize="16dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/button4"
            android:textColor="#FFF"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/next"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Forgot Password? Click me" />


    </RelativeLayout>



</LinearLayout>




</RelativeLayout>